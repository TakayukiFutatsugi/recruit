<h2 class="mb-5">プロフィール編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-2">
    <%= f.label :姓 %>：<%= f.text_field :familyName %>
    <%= f.label :名 %>：<%= f.text_field :lastName %>
  </div>
  
  <div class="field mb-2">
    <%= f.label :セイ %>：<%= f.text_field :familyNameDetail %>
    <%= f.label :メイ %>：<%= f.text_field :lastNameDetail %>
  </div>
  
  <div class="field mb-2">
    <%= f.label :性別 %>：<%= f.select :gender, User.genders.keys, {} %>
  </div>
  
  <div class="field mb-2">
    <%= f.label :生年月日 %>：<%= f.date_select(:birthdate, start_year: 1970, end_year: Date.today.year) %>
  </div>
  
  <div class="field mb-2">
    <%= f.label :居住地 %>：<%= f.select :location, User.locations.keys, {} %>
  </div>
  
  <div class="field mb-2">
    <%= f.label :学歴 %>：<%= f.text_field :education %>
  </div>
  
  <div class="field mb-2">
    <%= f.label :職歴 %>：<%= f.text_field :career %>
  </div>
  
  <div class="field mb-2">
    <%= f.label :エンジニアになる理由 %>：<%= f.text_field :reason %>
  </div>
  
  <div class="field mb-2">
    <%= f.label :長所 %>：<%= f.text_field :strongPoint %>
  </div>
  
  <div class="field mb-2">
    <%= f.label :短所 %>：<%= f.text_field :weakPoint %>
  </div>
  
  <div class="field mb-2">
    <%= f.label :エンジニアとしての目標 %>：<%= f.text_field :goal %>
  </div>
  
  <div class="field mb-2">
    <%= f.label :学習に使っているサイト・書籍 %>：<%= f.text_field :learningResource %>
  </div>
  
  <div class="field mb-2">
    <%= f.label :情報収集に使っているサイト・書籍 %>：<%= f.text_field :informationResource %>
  </div>
  
  <div class="field mb-2">
    <%= f.label :学習した言語・フレームワーク %>：<%= f.text_field :programmingLanguage %>
  </div>
  
  <div class="field mb-2">
    <%= f.label :ポートフォリオ %>：<%= f.text_field :portfolio %>
  </div>
  
  <div class="field mb-2">
    <%= f.label :作ってみたいプロダクト %>：<%= f.text_field :futureProduct %>
  </div>
  
  <div class="field mb-2">
    <%= f.label :自己紹介 %>：<%= f.text_area :introduction %>
  </div>
  
  <div class="field mb-2">
    <%= f.label :希望勤務地 %>：<%= f.select :workplace, User.workplaces.keys, {} %>
  </div>
  
  <div class="field mb-2">
    <%= f.label :希望年収 %>：<%= f.text_field :annualSalary %>万円
  </div>
  
  <div class="field mb-2">
    <%= f.label :勤務開始可能日 %>：<%= f.date_select(:startingDate, start_year: Date.today.year, end_year: Date.today.year+2) %>
  </div>
  
  <div class="field mb-2">
    <%= f.label :メールアドレス %>：<%= f.email_field :email, autocomplete: "email" %>
  </div>
  
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field mb-2">
    <%= f.label :パスワード %>：
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <i>(変更の必要がない場合は空白で問題ございません)</i>
  </div>

  <div class="field mb-2">
    <%= f.label :確認用パスワード %>：<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field mb-2">
    <%= f.label :現在のパスワード %>：<%= f.password_field :current_password, autocomplete: "current-password" %>
    <i>(変更を保存するために現在のパスワードを入力してください)</i>
  </div>

  <div class="actions mb-2">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>

<p><%= link_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除してよろしいですか?" }, method: :delete %></p>
<p><%= link_to "戻る", :back %></p>
